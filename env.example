# Database
DATABASE_URL="postgresql://username:password@localhost:5432/n0de_db?schema=public"

# JWT Secret
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Redis (for caching and rate limiting)
REDIS_URL="redis://localhost:6379"

# API Configuration
API_PORT=3000
NODE_ENV=production

# Solana RPC Endpoints
SOLANA_MAINNET_RPC="https://api.mainnet-beta.solana.com"
SOLANA_DEVNET_RPC="https://api.devnet.solana.com"
SOLANA_TESTNET_RPC="https://api.testnet.solana.com"

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=1000

# CORS Origins
CORS_ORIGINS="https://n0de.com,https://www.n0de.com,http://localhost:3000"

# Email Configuration (for support notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="support@n0de.com"
SMTP_PASS="your-email-password"

# Monitoring & Analytics
SENTRY_DSN=""
DATADOG_API_KEY=""

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_SUPPORT_CHAT=true
ENABLE_ANALYTICS=true

# External Services
COINBASE_API_KEY=""
STRIPE_SECRET_KEY=""

# Payment Providers
COINBASE_COMMERCE_API_KEY="your-coinbase-commerce-api-key"
COINBASE_COMMERCE_WEBHOOK_SECRET="your-coinbase-webhook-secret"
NOWPAYMENTS_API_KEY="your-nowpayments-api-key"
NOWPAYMENTS_IPN_SECRET="your-nowpayments-ipn-secret"

# Frontend URL (for payment redirects)
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:3001"

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret-change-this"

# Logging
LOG_LEVEL="info"
LOG_FILE_PATH="./logs"
# Default Environment Variables
# These are the base defaults that apply to all environments
# Override in .env, .env.local, or environment-specific files

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=4000
HOST=localhost

# Database Configuration
DB_POOL_MIN=10
DB_POOL_MAX=100
DB_POOL_IDLE=10000
DB_POOL_ACQUIRE=30000
DB_QUERY_TIMEOUT=30000
DB_SCHEMA=public
USE_PGBOUNCER=false

# Redis Configuration
REDIS_MAX_RETRIES=3
REDIS_READY_CHECK=true
REDIS_LAZY_CONNECT=false

# JWT Configuration
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_CREDENTIALS=true

# Performance Settings
UV_THREADPOOL_SIZE=128
NODE_OPTIONS=--max-old-space-size=4096

# Development Settings
FORCE_COLOR=1
DEBUG_MODE=false
ENABLE_SWAGGER=true

# Production Settings
SSL_ENABLED=false
FORCE_HTTPS=false
ENABLE_CORS=true

# Feature Flags
BILLING_ENABLED=true
WEBSOCKET_ENABLED=true
RATE_LIMITING_ENABLED=true
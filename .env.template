# NEXT_PUBLIC_APP_URL=https://n0de.pro
# NEXT_PUBLIC_DOCS_URL=https://docs.n0de.pro
# NEXT_PUBLIC_SITE_URL=https://n0de.pro

# =============================================================================
# DEVELOPMENT/TESTING OVERRIDES
# =============================================================================
# Uncomment for local development
# NODE_ENV=development
# DATABASE_URL=postgresql://postgres:password@localhost:5432/n0de_dev
# REDIS_URL=redis://localhost:6379
# FRONTEND_URL=http://localhost:3001
# BACKEND_URL=http://localhost:3000

# Authentication bypass for development/testing
# WARNING: NEVER set to 'true' in production!
DEV_AUTH_BYPASS=false
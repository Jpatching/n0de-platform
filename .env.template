# N0DE Platform - Master Environment Template
# This file contains ALL environment variables required across all services
# Copy to .env and fill in your actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
PORT=3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database (backend provides this automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# Redis Cache (backend provides this automatically)
REDIS_URL=redis://user:password@host:port

# =============================================================================
# SERVICE URLS & DOMAINS
# =============================================================================
# Backend API Configuration
API_BASE_URL=https://api.n0de.pro/api/v1
BACKEND_URL=https://api.n0de.pro
BASE_URL=https://api.n0de.pro
SERVER_URL=https://api.n0de.pro

# Frontend URLs
FRONTEND_URL=https://www.n0de.pro
GAMING_URL=https://pv3-production.vercel.app
ADMIN_URL=https://admin-n0de.vercel.app

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=https://n0de.pro,https://www.n0de.pro,https://n0de-website-o8fws86az-jpatchings-projects.vercel.app

# =============================================================================
# JWT & AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-jwt-refresh-secret
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret
COOKIE_DOMAIN=.n0de.pro

# =============================================================================
# OAUTH PROVIDERS
# =============================================================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_REDIRECT_URI=https://api.n0de.pro/api/v1/auth/google/callback
GOOGLE_CALLBACK_URL=https://api.n0de.pro/api/v1/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_OAUTH_REDIRECT_URI=https://api.n0de.pro/api/v1/auth/github/callback

# OAuth Success/Failure Redirects
OAUTH_SUCCESS_REDIRECT=https://n0de.pro/auth/callback
OAUTH_FAILURE_REDIRECT=https://n0de.pro?auth=error

# =============================================================================
# PAYMENT PROVIDERS
# =============================================================================
# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Coinbase Commerce
COINBASE_COMMERCE_API_KEY=your-coinbase-commerce-api-key
COINBASE_COMMERCE_WEBHOOK_SECRET=your-coinbase-webhook-secret

# NOWPayments
NOWPAYMENTS_API_KEY=your-nowpayments-api-key
NOWPAYMENTS_IPN_SECRET=your-nowpayments-ipn-secret

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10000
RATE_LIMIT_MAX=10000
RATE_LIMIT_TTL=60

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
WEBSOCKET_CORS_ORIGINS=https://www.n0de.pro,https://pv3-production.vercel.app

# =============================================================================
# MICROSERVICES PORTS (for development)
# =============================================================================
ADMIN_PORT=3002
PAYMENT_SERVICE_PORT=3005
USER_DASHBOARD_PORT=3004

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@n0de.pro

# =============================================================================
# MONITORING & LOGGING (Optional)
# =============================================================================
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

